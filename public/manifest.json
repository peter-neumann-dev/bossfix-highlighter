{
  "manifest_version": 3,
  "name": "BossFix Highlighter",
  "version": "1.0.0",
  "description": "Ohne BossFix l√§uft hier nix!",
  "icons": {
    "16": "icons/ext-icon-16.png",
    "32": "icons/ext-icon-32.png",
    "48": "icons/ext-icon-48.png",
    "128": "icons/ext-icon-128.png"
  },
  "permissions": ["activeTab", "storage"],
  "web_accessible_resources": [
    {
      "resources": ["the-bossfix.mp3"],
      "matches": [
        "*://*.github.com/*",
        "*://*.gitlab.com/*",
        "*://*.gitlab.davitec.net/*",
        "*://*.bitbucket.org/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*",
        "*://*.gitlab.com/*",
        "*://*.gitlab.davitec.net/*",
        "*://*.bitbucket.org/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
